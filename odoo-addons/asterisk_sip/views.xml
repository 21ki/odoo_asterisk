<?xml version="1.0" encoding="utf-8"?>
<openerp><data>

    <record model="ir.ui.view" id="asterisk_sip_peer_exten_list">
        <field name="name">asterisk sip peer extensions</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="permit"/>
                <field name="ipaddr"/>
                <field name="regseconds_human"/>
                <field name="useragent"/>
                <field name="fullcontact"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="asterisk_sip_peer_provider_list">
        <field name="name">asterisk sip peer providers</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="note"/>
                <field name="callbackextension"/>
                <field name="host"/>
                <field name="context"/>
                <field name="dtmfmode"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="asterisk_sip_peer_form">
        <field name="name">asterisk sip peer form</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="prune" type="object" string="Prune"
                            icon="fa-recycle"  class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_read_only"/>
                        <h1><field name="name"/></h1>
                        <small><field name="note"/></small>
                    </div>
                    <group>
                        <group>
                            <field name="peer_type" invisible="1"/>
                            <field name="host"/>
                            <field name="callbackextension"
                                   attrs="{'invisible': [('peer_type','!=', 'provider')]}"/>
                            <field name="callerid"/>
                            <field name="secret"/>
                            <field name="context" required="True"/>
                            <field name="type"/>
                            <field name="accountcode"/>
                        </group>
                        <group>
                            <field name="nat"/>
                            <field name="qualify"/>
                            <field name="permit"/>
                            <field name="deny"/>
                            <field name="defaultip"/>
                            <field name="defaultuser"/>
                            <field name="fromuser"/>
                            <field name="fromdomain"/>
                            <field name="insecure"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="dtmfmode"/>
                            <field name="allow"/>
                            <field name="disallow"/>
                            <field name="rtptimeout"/>
                            <field name="canreinvite"/>
                            <field name="rtptimeout"/>
                            <field name="rtpholdtimeout"/>
                            <field name="language"/>
                        </group>
                        <group  string="Status">
                            <field name="useragent" class="oe_read_only"/>
                            <field name="ipaddr" class="oe_read_only"/>
                            <field name="port" class="oe_read_only"/>
                            <field name="fullcontact" class="oe_read_only"/>
                            <field name="regseconds_human" class="oe_read_only"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asterisk_sip_peer_exten_action">
        <field name="name">Extensions</field>
        <field name="res_model">asterisk.sip_peer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('peer_type', '=', 'exten')]</field>
        <field name="context">{'default_peer_type': 'exten'}</field>
    </record>

    <record model="ir.actions.act_window" id="asterisk_sip_peer_agent_action">
        <field name="name">Agents</field>
        <field name="res_model">asterisk.sip_peer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('peer_type', '=', 'agent')]</field>
        <field name="context">{'default_peer_type': 'agent'}</field>
    </record>

    <record model="ir.actions.act_window" id="asterisk_sip_peer_provider_action">
        <field name="name">Providers</field>
        <field name="res_model">asterisk.sip_peer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('peer_type', '=', 'provider')]</field>
        <field name="context">{'default_peer_type': 'provider'}</field>
    </record>

    <record model="ir.actions.act_window" id="asterisk_sip_peer_gateway_action">
        <field name="name">Gateways</field>
        <field name="res_model">asterisk.sip_peer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('peer_type', '=', 'gateway')]</field>
        <field name="context">{'default_peer_type': 'gateway'}</field>
    </record>

    <record model="ir.actions.act_window.view" id="asterisk_provider_tree_action">
        <field name="act_window_id" ref="asterisk_sip_peer_provider_action"/>
        <field name="view_id" ref="asterisk_sip_peer_provider_list"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="SIP Peers" id="asterisk_sip_peers_menu"
              parent="asterisk_base.asterisk_menu" sequence="100"/>

    <menuitem name="Extensions" parent="asterisk_sip_peers_menu" sequence="10"
              action="asterisk_sip_peer_exten_action" id="asterisk_sip_peer_exten_menu"/>

    <menuitem name="Providers" parent="asterisk_sip_peers_menu" sequence="20"
              action="asterisk_sip_peer_provider_action" id="asterisk_sip_peer_provider_menu"/>

    <menuitem name="Gateways" parent="asterisk_sip_peers_menu" sequence="30"
              action="asterisk_sip_peer_gateway_action" id="asterisk_sip_peer_gateway_menu"/>

    <menuitem name="Agents" parent="asterisk_sip_peers_menu" sequence="40"
              action="asterisk_sip_peer_agent_action" id="asterisk_sip_peer_agent_menu"/>

    <record id="sip_peer_access_search" model="ir.ui.view">
        <field name="name">asterisk.sip_peer.search</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="ipaddr"/>
            </search>
        </field>
    </record>

    <function name="grant_asterisk_access" model="asterisk.sip_peer"/>

</data></openerp>
