<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="channels">
        <div class='channels_list'/>
    </t>

    <t t-name="channels.list">
      <div class="o_content">
        <div class='table-responsive'>
          <table class='class="o_list_view table table-condensed table-striped"'>
            <thead>
              <tr>
                  <!-- <th>Channel</th> -->
                  <th>State</th>
                  <!-- <th>Started</th> -->
                  <th>Account</th>
                  <th>Caller name</th>
                  <th>Caller number</th>
                  <th>Connected name</th>
                  <th>Connected number</th>
                  <th>Context</th>
                  <th>Exten</th>
                  <th>Priority</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach='channels' t-as='chan'>
                <tr>
                    <!--
                    <td>
                        <t t-esc='chan.name'/>
                    </td>
                    -->
                    <td>
                        <t t-esc='chan.state'/>
                    </td>
                    <!-- <td>
                        <t t-esc='chan.creationtime'/>
                    </td>
                    -->
                    <td>
                        <t t-esc='chan.accountcode'/>
                    </td>
                    <td>
                        <t t-esc='chan.caller.name'/>
                    </td>
                    <td>
                        <t t-esc='chan.caller.number'/>
                    </td>
                    <td>
                        <t t-esc='chan.connected.name'/>
                    </td>
                    <td>
                        <t t-esc='chan.connected.number'/>
                    </td>
                    <td>
                        <t t-esc='chan.dialplan.context'/>
                    </td>
                    <td>
                        <t t-esc='chan.dialplan.exten'/>
                    </td>
                    <td>
                        <t t-esc='chan.dialplan.priority'/>
                    </td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </div>
    </t>

</templates>
